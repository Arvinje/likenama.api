<div class="col-lg-12">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h2>ورود پرسنل</h2>

      <%= simple_form_for(resource, as: resource_name, url: manager_session_path) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, input_html: { dir: :ltr } %>
          <%= f.input :password, required: false, input_html: { dir: :ltr } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, class: "btn-lg btn-primary", style: "width: 100%;" %>
        </div>
      <% end %>

      <%= render "managers/shared/links" %>
    </div>
  </div>
</div>
