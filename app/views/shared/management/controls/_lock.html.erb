<% if user.active_for_authentication? %>
  <%= button_to "اکانت را قفل‌کن", lock_management_user_path(user), method: :patch, class: "btn btn-danger", data: { confirm: "آیا مطمئن هستید که می‌خواهید این کاربر قفل شود؟" } %>
<% else %>
  <%= button_to "اکانت را بازکن", unlock_management_user_path(user), method: :patch, class: "btn btn-success", data: { confirm: "آیا مطمئن هستید که می‌خواهید این کاربر باز شود؟" } %>
<% end %>
