<% if user.active_for_authentication? %>
  <%= button_to "اکانت را قفل‌کن", lock_management_user_path(user), method: :patch, remote: true, class: "btn btn-danger", data: { confirm: "آیا مطمئن هستید که می‌خواهید این کاربر قفل شود؟", disable_with: "صبرکنید" } %>
<% else %>
  <%= button_to "اکانت را بازکن", unlock_management_user_path(user), method: :patch, remote: true, class: "btn btn-success", data: { confirm: "آیا مطمئن هستید که می‌خواهید این کاربر باز شود؟", disable_with: "صبرکنید" } %>
<% end %>
