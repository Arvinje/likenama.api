<div class="col-xs-10 col-lg-6 col-xs-offset-1 col-lg-offset-3">
  <h3 class="text-center"><span class="glyphicon glyphicon-cog"></span> تنظیمات</h3>
  <%= simple_form_for [:management, campaign] do |f| %>
    <div class="btn-group btn-group-justified" role="group">

      <div class="btn-group" role="group">
        <%= f.button :submit, class: "btn btn-lg btn-success#{ " active" if campaign.verified}", name: :commit, value: " پذیرش" do %>
          <span class="glyphicon glyphicon-ok"></span> پذیرش
        <% end %>
      </div>
      <div class="btn-group" role="group">
        <%= f.button :submit, class: "btn btn-lg btn-warning#{ " active" if campaign.verified.nil?}", name: :commit, value: " درحال بررسی" do %>
          <span class="glyphicon glyphicon-exclamation-sign"></span> درحال بررسی
        <% end %>
      </div>
      <div class="btn-group" role="group">
        <%= f.button :submit, class: "btn btn-lg btn-danger#{ " active" unless campaign.verified}", name: :commit, value: " غیرقابل قبول" do %>
          <span class="glyphicon glyphicon-remove"></span> غیرقابل قبول
        <% end %>
      </div>

    </div>
  <% end %>
</div>
