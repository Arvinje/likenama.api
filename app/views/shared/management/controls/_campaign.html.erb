<div class="col-xs-10 col-lg-6 col-xs-offset-1 col-lg-offset-3">
  <h3 class="text-center"><span class="glyphicon glyphicon-cog"></span> تنظیمات</h3>
  <div class="btn-group btn-group-justified" role="group">
    <% case campaign.verified %>
    <% when true %>
      <div class="btn-group" role="group">
        <button class="btn btn-lg btn-success active" style="" type="button" name="button"><span class="glyphicon glyphicon-ok"></span> پذیرش</button>
      </div>
      <div class="btn-group" role="group">
        <button class="btn btn-lg btn-warning" style="" type="button" name="button"><span class="glyphicon glyphicon-exclamation-sign"></span> درحال بررسی</button>
      </div>
      <div class="btn-group" role="group">
        <button class="btn btn-lg btn-danger" style="" type="button" name="button"><span class="glyphicon glyphicon-remove"></span> غیرقابل قبول</button>
      </div>
    <% when nil %>
      <div class="btn-group" role="group">
        <button class="btn btn-lg btn-success" style="" type="button" name="button"><span class="glyphicon glyphicon-ok"></span> پذیرش</button>
      </div>
      <div class="btn-group" role="group">
        <button class="btn btn-lg btn-warning active" style="" type="button" name="button"><span class="glyphicon glyphicon-exclamation-sign"></span> درحال بررسی</button>
      </div>
      <div class="btn-group" role="group">
        <button class="btn btn-lg btn-danger" style="" type="button" name="button"><span class="glyphicon glyphicon-remove"></span> غیرقابل قبول</button>
      </div>
    <% when false %>
      <div class="btn-group" role="group">
        <button class="btn btn-lg btn-success disabled" style="" type="button" name="button"><span class="glyphicon glyphicon-ok"></span> پذیرش</button>
      </div>
      <div class="btn-group" role="group">
        <button class="btn btn-lg btn-warning disabled" style="" type="button" name="button"><span class="glyphicon glyphicon-exclamation-sign"></span> درحال بررسی</button>
      </div>
      <div class="btn-group" role="group">
        <button class="btn btn-lg btn-danger active" style="" type="button" name="button"><span class="glyphicon glyphicon-remove"></span> غیرقابل قبول</button>
      </div>
    <% end %>
  </div>
</div>
