<%= simple_form_for [:management, product_detail.product, product_detail], :validate => true, html: { class: 'form-horizontal' } do |f| %>
  <div class="col-sm-6 col-xs-10 col-xs-offset-1">
    <%= f.input :code, as: :string %>
  </div>
  <div class="col-sm-1 col-sm-offset-1 col-xs-2 col-xs-offset-1">
    <%= f.input :available, wrapper_html: { style: "font-size: 18px;margin-top: 30px;" } %>
  </div>
  <div class="col-sm-3 col-xs-8">
    <%= f.button :submit, class: "btn btn-primary", style: "margin-top: 32px; width: 100%;" %>
  </div>
<% end %>
